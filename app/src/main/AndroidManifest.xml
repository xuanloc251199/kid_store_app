<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permission for internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- Cấu hình cho phép WakeLock và Alarm -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kid_toy_store"
        tools:targetApi="31">
        <activity
            android:name=".view.activity.DirectPaymentActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.PaymentMethodActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.AddCardPaymentActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.PaidOrdersActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.AllPaymentCardActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.SaveCardActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.UpdateProfileActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.EditPaymentCardActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.EditShippingAddressActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.OrderSuccessfullyActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.CheckOutActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.CartActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.AllPlaygroundActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.DetailPlaygroundActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.DetailProductActivity"
            android:exported="false"
            android:theme="@style/Theme.Kid_toy_store" />
        <activity
            android:name=".view.activity.AllProductActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.DetailCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.MainActivity"
            android:exported="false" />
    </application>

</manifest>