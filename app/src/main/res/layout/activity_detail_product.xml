<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".view.activity.DetailProductActivity">

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/main_space"
            app:cardBackgroundColor="@color/backgroundColor"
            app:cardCornerRadius="@dimen/large_radius">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/small_space"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_back_primary_color" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvBackHome"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/main_space"
            app:cardBackgroundColor="@color/backgroundColor"
            app:cardCornerRadius="@dimen/large_radius">

            <ImageView
                android:id="@+id/imgHome"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/small_space"
                android:contentDescription="@string/home"
                android:src="@drawable/ic_home" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvCart"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/cvBackHome"
            app:cardBackgroundColor="@color/backgroundColor"
            app:cardCornerRadius="@dimen/large_radius">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_margin="5dp"
                    android:layout_alignParentEnd="true"
                    app:cardBackgroundColor="@color/secondPrimaryColor"
                    app:cardCornerRadius="7dp">
                    <TextView
                        android:id="@+id/tvTotalQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="12"
                        android:textSize="8sp"
                        android:textColor="@color/textWhiteColor"
                        android:fontFamily="@font/medium"
                        tools:ignore="SmallSp" />
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/imgCart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/small_space"
                    android:contentDescription="@string/back"
                    android:src="@drawable/ic_cart" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgProduct"
        android:layout_above="@id/lnAddToCart"
        android:layout_marginTop="@dimen/small_space"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/main_space">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvFinalPriceProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:text="@string/priceProduct"
                        android:textColor="@color/textPrimaryColor"
                        android:textSize="@dimen/large_text_size" />
                    <TextView
                        android:id="@+id/tvPriceProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/main_space"
                        android:fontFamily="@font/bold"
                        android:text="@string/priceProduct"
                        android:textColor="@color/lightGray"
                        android:textSize="@dimen/small_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    tools:ignore="RelativeOverlap">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/regular"
                        android:text="@string/sold_title"
                        android:textColor="@color/textPrimaryColor"
                        android:textSize="@dimen/small_text_size" />

                    <TextView
                        android:id="@+id/tvSoldProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:text="@string/sold"
                        android:textColor="@color/textPrimaryColor"
                        android:textSize="@dimen/small_text_size" />


                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvNameProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/medium"
                android:text="@string/priceProduct"
                android:textColor="@color/textSecondPrimaryColor"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_space"
                android:fontFamily="@font/bold"
                android:text="@string/description"
                android:textAllCaps="true"
                android:textColor="@color/textSecondPrimaryColor"
                android:textSize="@dimen/text_title_size" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_space"
                android:fontFamily="@font/regular"
                android:text="@string/lorem_ipsum"
                android:textAlignment="inherit"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/small_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_space"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_space">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/bold"
                        android:text="@string/reviews"
                        android:textAllCaps="true"
                        android:textColor="@color/textSecondPrimaryColor"
                        android:textSize="@dimen/text_title_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvViewMoreProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="@string/view_more"
                            android:textColor="@color/darkGray"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:importantForAccessibility="no"
                            android:src="@drawable/ic_next" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lnAddToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_space"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/main_space"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_space"
            android:gravity="center_vertical"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/regular"
                android:text="@string/quantity"
                android:textColor="@color/textSecondPrimaryColor"
                android:textSize="@dimen/medium_text_size" />

            <LinearLayout
                android:id="@+id/lnQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvMinus"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="3dp"
                    app:cardBackgroundColor="@color/primaryColor"
                    app:cardElevation="0dp">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_minus"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvNumberCounter"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:text="@string/counter"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/textSecondPrimaryColor"
                    android:background="@color/white"
                    android:gravity="center" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPlus"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="3dp"
                    app:cardBackgroundColor="@color/primaryColor"
                    app:cardElevation="0dp">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_plus"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_space"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/regular"
                android:text="@string/total"
                android:textColor="@color/textSecondPrimaryColor"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/extrabold"
                android:text="@string/priceProduct"
                android:textColor="@color/textPrimaryColor"
                android:textSize="@dimen/medium_text_size"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>

        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/large_space"
            android:background="@drawable/button_background"
            android:fontFamily="@font/extrabold"
            android:text="@string/add_to_cart"
            android:textAlignment="center"
            android:textSize="16sp"
            app:backgroundTint="@null"/>

    </LinearLayout>

</RelativeLayout>