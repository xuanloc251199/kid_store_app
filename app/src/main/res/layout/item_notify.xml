<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/cvNotify"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/small_space"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/card_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_space"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvNotifyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_space"
            android:text="@string/notification"
            android:fontFamily="@font/bold"
            android:textSize="@dimen/main_space"
            android:textColor="@color/secondPrimaryColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgStatus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="@dimen/large_space"
                android:src="@drawable/ic_notification"/>

            <TextView
                android:id="@+id/tvNotify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notification"
                android:fontFamily="@font/medium"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/secondPrimaryColor"/>

        </LinearLayout>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>